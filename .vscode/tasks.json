{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run MongoDB",
            "type": "shell",
            "command": "mongod --dbpath ./data",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Build & Publish to Staging",
            "type": "shell",
            "command": "publish.ps1",
            "problemMatcher": []
        },
        {
            "label": "Build & Publish to Production",
            "type": "shell",
            "command": "publish-prod.ps1",
            "problemMatcher": []
        },
        {
            "type": "typescript",
            "tsconfig": "Server\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}