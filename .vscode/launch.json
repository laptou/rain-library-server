    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "API Only",
            "sourceMaps": true,
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "smartStep": true,
            "showAsyncStacks": true,
            "skipFiles": [
                "node_modules/"
            ],
            "args": [
                "-api-only",
                "-no-http2",
                "-no-ssl"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Production",
            "sourceMaps": true,
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "smartStep": true,
            "showAsyncStacks": true,
            "skipFiles": [
                "node_modules/"
            ],
            "args": [
                "-production",
                "-ssl",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Normal",
            "sourceMaps": true,
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "smartStep": true,
            "showAsyncStacks": true,
            "args": [],
            "skipFiles": [
                "node_modules/"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Normal w/ SSL",
            "sourceMaps": true,
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "smartStep": true,
            "showAsyncStacks": true,
            "args": [
                "-ssl"
            ],
            "skipFiles": [
                "node_modules/"
            ]
        }
    ]
}